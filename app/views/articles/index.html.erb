</head>

<body>
  <header>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="https://bulma.io">
          <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
        </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">      

          <a class="navbar-item">
            Documentation
          </a>
        </div>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <a class="button is-primary">
              <strong>Sign up</strong>
            </a>
            <a class="button is-black">Se connecter
              <%= link_to('Se connecter', new_user_session_path)  %>  
            </a>
          </div>
        </div>
      </div>
      </div>
    </nav>
  </header>






  <p id="notice">
    <%= notice %>
  </p>


  <section class="section project">
    <div class="container has-text-centered">
      <h1 class="title is-spaced is-3">Mes créations</h1>
      <h2 class="subtitle is-5">Voici quelques projets de conception récents. Envie de voir plus?
        <a href="mailto:passasthemis@laposte.net">Envoyez moi un email</a>
      </h2>

      <div class="project-grid">
        <div class="columns is-multiline is-mobile">
          <% @articles.each do |article| %>
          <div class="column is-12-mobile is-half-tablet is-one-third-desktop ">





            <div class="content-projet">
              <div class="content-overlay"></div>
              <div class="image is-5by4 ">
                <%= image_tag "#{article.image.thumb.url}"%>
              </div>
              <div class="content-details fadeIn-top test">
                <h3 class="title is-2">
                  <%= article.text %>
                </h3>
                <p>This is a short description</p>
                <a class="button is-primary is-outlined is-rounded" href="#">
                  <span>Visiter le site web</span>
                </a>
              </div>
            </div>




            


            <% if logged_in?(:admin) %>
            <p>
              <%= link_to 'Edit', edit_article_path(article) %>
            </p>
            <p>
              <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
            </p>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="columns">
      <div class="column has-text-centered">
        <a class="button is-primary is-outlined is-rounded " href="#">En savoir plus</a>
      </div>
    </div>
    </div>
  </section>




  <%= link_to 'New Article', new_article_path %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
  

  <footer></footer>

</body>



























